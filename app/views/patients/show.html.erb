<p class="flash"><%= flash[:notice] %></p>

<h1><%= full_name(@patient) %></h1>

<h2 class="inline-header">Prescriptions</h2>
<%= link_to "Add Prescription", new_patient_prescription_path(@patient) , class: 'right-link' %>
<table class="table">
  <thead>
  <tr>
    <th>Medication</th>
    <th>Dosage / Schedule</th>
    <th>Dates</th>
  </tr>
  </thead>
  <tbody>
  <% @patient.prescriptions.each do |prescription| %>
    <tr>
      <td><%= prescription.medication.name %></td>
      <td><%= prescription.dosage %> <%= prescription.schedule %></td>
      <td><%= prescription.starts_on%> - <%= prescription.ends_on %></td>
    </tr>
  <% end %>
  </tbody>
</table>